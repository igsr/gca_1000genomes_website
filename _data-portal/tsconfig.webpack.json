{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": [],
    "outDir": "build/ts",
    "rootDir": ".",
    "sourceMap": false
  },
  "include": ["app/**/*.ts", "app/*.ts"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
